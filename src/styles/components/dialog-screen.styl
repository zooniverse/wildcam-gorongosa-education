.dialog-screen
  position: fixed
  left: 0
  top: 0
  z-index: 1000001  //Place waaay above map plugin elements.
  width: 100%
  height: 100%
  display: none  //Hide initially, add .enabled to show.
  flex-direction: column
  justify-content: center
  align-items: center
  background: rgba(0, 0, 0, 0.5)
  
  cursor: pointer  //Click to close

  &.enabled
    display: flex

  .dialog-box
    flex: 0 0 auto
    background: #fff
    padding: 1em
    border-radius: 1em
    cursor: default
    box-shadow: 0 2px 10px #000
    
    .close-button
      font-size: 0.5em
      float: right

    > div
      text-align: center
    
    .info
      color: green
    
    .note
      color: #999
      font-size: 0.8em
      max-width: 20em
      
  &.view-camera
    
    .dialog-box
      width: 90%
      max-width: 1000px
    
    ul
      display: flex
      flex-wrap: wrap
      flex-direction: row
      justify-content: center
      align-items: center
      align-content: center
      list-style: none
      padding: 0
      margin: 0.5em auto 0 auto
      width: 100%
      max-width: 1000px
      
      li
        flex: 1 1 31%
        padding: 0
        margin: 1%
        
        img
          display: block
          width: 100%

.dialog-ver3
  position: fixed
  left: 0
  top: 0
  z-index: 1000001  //Place waaay above map plugin elements.
  width: 100%
  height: 100%
  display: none  //Hide initially, add .enabled to show.
  flex-direction: column
  justify-content: center
  align-items: center
  background: rgba(0, 0, 0, 0.5)
  display: flex
  cursor: pointer  //Click to close

  .dialog-box
    flex: 0 0 auto
    background: #fff
    padding: 1em
    border-radius: 1em
    cursor: default
    box-shadow: 0 2px 10px #000
    width: 90%
    max-width: 1000px
    
    .close-button
      font-size: 0.5em
      float: right

    > div
      text-align: center
      
  &.view-camera
    
    .title
      font-size: 1.2em
      
      .highlight
        color: green
        font-weight: bold
        margin: 0.2em
      
    .meta
      margin: 0.5em 2em 0 2em
      color: #999
      
    .data
      border: 1px solid #ccc
      margin-top: 0.5em
      padding: 0.5em 0
      display: flex
      flex-wrap: wrap
      justify-content: space-around
      
      .item
        flex: 0 0 auto
        display: block
        width: 30%
        margin-bottom: 0.5em
        
        img
          display: block
          width: 100%
      
      .message
        flex: 0 0 auto
        width: 100%
        color: green
    
    .sad-message
      color: #999
    
    .small-message
      color: #999
      font-size: 0.8em

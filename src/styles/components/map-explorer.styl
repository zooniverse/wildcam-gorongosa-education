.map-explorer
  display: flex
  flex: 1 0 auto
  flex-direction: row-reverse
  background: #9ab
  
  .map-visuals
    flex: 1 1 auto
  
  .map-controls
    flex: 0 0 40%
    min-height: 20px
    overflow: auto

  .message
    margin: 0.5em
    padding: 0.5em
    border-radius: 0.5em
    color: #333
    text-shadow: 1px 1px #fff
    background: #ed6
  
  .controlPanel
    margin: 0.5em
    text-align: center

  .selector-panel
    margin: 0.5em
    border: 1px solid #eee
    border-radius: 1em
    padding: 0.5em
    
    .input-subpanel
      display: block
    
      &.not-selected
        color: #ccc
        
        .input-row
          display: none

      h1
        cursor: pointer
        margin: 0
        padding: 0.5em 0
        font-size: 1.2em
        font-weight: bold
        text-align: center
        
        &:hover
          background: #69b

      .input-row
        padding: 0.5em 0
        border-bottom: 1px solid #eee

        &:last-child
          border-bottom: none

        > label
          display: block

        input[type=text],
        textarea
          display: block
          width: 100%
          border: 1px solid #ccc

        textarea
          height: 20em

        ul
          list-style: none
          margin: 0
          padding: 0
          position: relative
          overflow: hidden

          li
            margin: 0
            padding: 0.1em 1em
            float: left
            width: 50%
            display: flex
            flex-direction: row
            
            input
              flex: 0 0 auto
              margin-right: 0.5em
              
            label
              flex: 1 1 auto

    .action-subpanel
      text-align: center

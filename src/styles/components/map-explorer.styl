.map-explorer
  display: flex
  flex: 1 0 auto
  flex-direction: row-reverse
  background: #9ab
  
  .map-visuals
    flex: 1 1 auto
  
  .map-controls
    flex: 0 0 40%
    min-height: 20px
    padding: 0.5em
    overflow: auto
    
    .inputRow
      margin: 0.5em
      padding: 0 0 0.5em 0
      
      label
        display: block
      
      textarea
        display: block
        width: 100%
        height: 10em
        font-family: "Lucida Console", Monaco, monospace

  .message
    margin: 0.5em
    padding: 0.5em
    border-radius: 0.5em
    color: #333
    background: #ed6

  .selector-panel
    border: 1px solid #eee
    border-radius: 1em
    padding: 0.5em
    
    .input-row
      padding: 0.5em 0
      border-bottom: 1px solid #eee
      
      &:last-child
        border-bottom: none
    
      label
        display: block
        
      input[type=text], textarea
        display: block
        width: 100%
        border: 1px solid #ccc
      
      textarea
        height: 3em

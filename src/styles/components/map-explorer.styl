.map-explorer
  display: flex
  flex: 1 0 auto
  flex-direction: row-reverse
  background: #edc
  
  .map-visuals
    flex: 1 1 auto
    border: 1em solid #9cc
  
  .map-controls
    flex: 0 0 40%
    min-height: 20px
    border: 1em solid #99c
    padding: 0.5em
    
    .inputRow
      margin: 0.5em
      padding: 0 0 0.5em 0
      border-bottom: 1px solid #333
      
      label
        display: block
      
      textarea
        display: block
        width: 100%
        height: 10em
        font-family: "Lucida Console", Monaco, monospace

  .message
    margin: 0.5em
    padding: 0.5em
    border-radius: 0.5em
    color: #333
    background: #ffc

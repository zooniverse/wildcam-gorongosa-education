.site-header
  @extend .navbar
  @extend .navbar-default
  @extend .navbar-static-top
  color #fff
  background green url(../images/zooniverse.png) no-repeat center 5px
  margin-bottom 0

  .title
    display inline-block
    padding 0 20px

  .link
    display inline-block
    margin 10px
    padding 10px
    color #fff
    text-decoration none
    border-radius 3px
    &.active,
    &:hover
      background-color #0085F3

.error-page
  background: url(http://i.giphy.com/MpBbsW3vbpXlS.gif) no-repeat center center fixed
  background-size: cover
  display: flex
  height: 100%
  justify-content: flex-end
  flex-direction: column

  .text
    text-align: center
    padding: 4em 0

    h1
      font-weight: bold
      font-size: 6em
      text-transform: uppercase
      margin: 0 0 1rem 0
      color: white

    p
      margin: 0
      font-size: 2em

    a
      color: green
